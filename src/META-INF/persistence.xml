<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="BCP" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <mapping-file>META-INF/mapping.xml</mapping-file>
        <class>sw1.model.MatrizEntity</class>
        <class>sw1.model.PuestoEntity</class>
        <class>sw1.model.UsuarioEntity</class>
        <class>sw1.model.AccesoEntity</class>
        <class>sw1.model.BuzonEntity</class>
        <class>sw1.model.CarpetacompartidaEntity</class>
        <class>sw1.model.PerfilInternetEntity</class>
        <class>sw1.model.UsuarioxaccesoEntity</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bcp"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
